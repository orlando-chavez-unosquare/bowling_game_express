{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": [
		"**/*.mjs",
		"**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		".*"
	],
	"types": [
		"node",
		"vitest/importMeta"
	]
}